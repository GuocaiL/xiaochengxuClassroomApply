<!--index.wxml-->
<view class="page">
	<view class="page-wrap">
    <image class="logo" src="../../images/logo.jpg"></image> 

		<view class="btn">
			<button bindtap="local">
				<image src="../../images/local.png"></image>预订教室
			</button>
		</view>
		<view class="btn">
			<button bindtap="remote">
				<image src="../../images/remote.png"></image>最近活动
			</button>
		</view>
		<view class="btn">
			<button bindtap="schedule">
				<image src="../../images/schedule.png"></image>我的预订
			</button>
		</view>
    <view class="btn" hidden="{{!isAdmin}}">
			<button bindtap="addClassroom">
				<image src="../../images/schedule.png"></image>管理教室
			</button>
		</view>
    <view class="btn" hidden="{{!isAdmin}}">
			<button bindtap="waitAgree">
				<image src="../../images/schedule.png"></image>审核
			</button>
		</view>
	</view>
</view>
